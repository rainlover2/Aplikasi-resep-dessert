<?xml version="1.0" encoding="utf-8"?>
<!--
    File ini bertindak sebagai "saklar" logika.
    Ia akan memilih drawable mana yang akan ditampilkan berdasarkan status.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Ketika statusnya terpilih (state_selected="true"),
        gunakan drawable untuk titik aktif.
    -->
    <item android:drawable="@drawable/tab_indicator_selected" android:state_selected="true" />

    <!--
        Untuk semua status lainnya (default),
        gunakan drawable untuk titik tidak aktif.
    -->
    <item android:drawable="@drawable/tab_indicator_default" />
</selector>

